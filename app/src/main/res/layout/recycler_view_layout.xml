<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/recycler_item_background"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cvTask"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvTaskTitle"
            android:layout_margin="5dp"
            android:text="Task Title"
            android:maxLines="2"
            android:layout_marginEnd="5dp"
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            app:layout_goneMarginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/chipTaskStatus"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ivAlarmIcon"
            android:src="@drawable/alarm_icon"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tvTaskTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/icons" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDueDate"
            android:textSize="14sp"
            android:text="Due Date"
            android:textColor="@color/secondaryText"
            app:layout_constraintTop_toBottomOf="@id/tvTaskTitle"
            app:layout_constraintStart_toEndOf="@id/ivAlarmIcon"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chipTaskStatus"
            android:text="To do"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:chipBackgroundColor="@color/todo"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:checkable="false"
            android:checked="false"
            android:focusable="false"
            app:chipIconTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>